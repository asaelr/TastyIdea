
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeViewFragment">
    <ScrollView
        android:id="@+id/mainView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame">
        <!--android:background="@android:drawable/dialog_holo_light_frame" - simulates elevation-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
<RelativeLayout
    android:layout_width="@dimen/recipe_view_image_width"
    android:layout_height="@dimen/recipe_view_image_height"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/recipe_pic"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipe_pic_loading"
        android:layout_centerInParent="true"/>
</RelativeLayout>
            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pancakes"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/recipe_view_name_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:textSize="@dimen/recipe_view_user_size"
                android:layout_gravity="center_horizontal"/>
            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:stepSize="1"
                android:numStars="5"
                android:isIndicator="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:id="@+id/vegeterian_indication">
                    <ImageView
                        android:layout_width="@dimen/recipe_atrr_indication_image_size"
                        android:layout_height="@dimen/recipe_atrr_indication_image_size"
                        android:src="@android:drawable/checkbox_on_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/recipe_view_atrr_size"
                        android:text="@string/vegetarian"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:id="@+id/vegan_indication">
                    <ImageView
                        android:layout_width="@dimen/recipe_atrr_indication_image_size"
                        android:layout_height="@dimen/recipe_atrr_indication_image_size"
                        android:src="@android:drawable/checkbox_on_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/recipe_view_atrr_size"
                        android:text="@string/vegan"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:id="@+id/kosher_indication">
                    <ImageView
                        android:layout_width="@dimen/recipe_atrr_indication_image_size"
                        android:layout_height="@dimen/recipe_atrr_indication_image_size"
                        android:src="@android:drawable/checkbox_on_background"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/recipe_view_atrr_size"
                        android:text="@string/kosher"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/properties"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/time"
                        android:textSize="@dimen/recipe_view_atrr_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/difficulty"
                        android:textSize="@dimen/recipe_view_atrr_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/category"
                        android:textSize="@dimen/recipe_view_atrr_size"/>
             </LinearLayout>


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/list_views">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients_title"
                android:text="@string/ingredients_headline"
                android:textSize="@dimen/recipe_view_list_title_size"
                android:padding="2dp"/>
            <com.example.asaelr.tastyidea.ExpandedListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ingredients"
                android:textSize="16sp"
                android:background="@color/listBackground"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/preparation_title"
                android:text="@string/preparation_headline"
                android:textSize="@dimen/recipe_view_list_title_size"
                android:padding="2dp"/>
            <com.example.asaelr.tastyidea.ExpandedListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/directions"
                android:textSize="16sp"
                android:background="@color/listBackground"
                />
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/comments_title"-->
                <!--android:text="Comments:"-->
                <!--android:textSize="@dimen/recipe_view_list_title_size"/>-->
            <!--<com.example.asaelr.tastyidea.ExpandedListView-->
