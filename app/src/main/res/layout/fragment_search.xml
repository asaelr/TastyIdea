<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/select_ingredients"
        android:textSize="24sp"
        android:id="@+id/textView5"
        android:layout_gravity="center" />

    <fragment
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:name="com.example.asaelr.tastyidea.Ingredients.IngredientListFragment"
        android:id="@+id/ingredient_list_fragment"
        custom:showEditText="false"

        android:background="@color/listBackground"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:textSize="18sp"
                android:id="@+id/textView2"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categories_spinner"
                android:entries="@array/recipe_categories"
                android:spinnerMode="dropdown" />


        </LinearLayout>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:id="@+id/imageButton3"
            android:src="@drawable/search_icon"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:onClick="searchClick"
            android:nestedScrollingEnabled="true" />
    </LinearLayout>



</LinearLayout>